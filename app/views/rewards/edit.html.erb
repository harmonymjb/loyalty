<div class="page-header">
  <h2>Edit Reward</h2>
</div>

<%= form_for([current_user.store, @reward]) do |f| %>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofill: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :value %>
    <%= f.text_field :value, autofill: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, autofill: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-success" %>
  </div>

<% end %>
