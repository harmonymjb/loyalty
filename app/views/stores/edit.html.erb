<div class="page-header">
  <h2>Edit Store</h2>
</div>

<%= form_for(@user.store) do |f| %>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofill: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :default_value %>
    <%= f.text_field :default_value, autofill: true, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, autofill: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-success" %>
  </div>

<% end %>

